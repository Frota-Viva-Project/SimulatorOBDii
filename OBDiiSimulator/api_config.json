{
  "apiConfig": {
    "baseUrl": "https://api-postgresql-kr87.onrender.com",
    "endpoints": {
      "fcmNotification": "/api/fcm/send-notification",
      "insertAlert": "/api/alerta/inserir",
      "swagger": "/swagger-ui/index.html"
    },
    "timeout": 30,
    "retryAttempts": 3,
    "retryDelay": 2000
  },
  "alertThresholds": {
    "maxCoolantTemp": 110.0,
    "minOilPressure": 150.0,
    "minFuelLevel": 15.0,
    "minBatteryVoltage": 22.0,
    "maxEngineRPM": 3000.0,
    "checkInterval": 30
  },
  "fcmConfig": {
    "defaultTopic": "/topics/truck_alerts",
    "notificationIcon": "ic_warning",
    "notificationSound": "default"
  }
}